<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black"
        android:gravity="center_horizontal">

        <!-- MAP -->
        <LinearLayout
            android:id="@+id/gameTopLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.example.hideandsink.MapView
                android:id="@+id/playerMapView"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_marginTop="40dp"/>

        </LinearLayout>

        <!-- Game Text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/gameText"
                android:layout_width="match_parent"
                android:textSize="25dp"
                android:gravity="center"
                android:text="Waiting"
                android:layout_height="35dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/gameButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/gameButtonsTopRowLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Sonar Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/sonarButton"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:scaleType="fitCenter"
                        android:background="#00B7c3"
                        android:layout_margin="2dp"
                        android:src="@drawable/radar_blue"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:text="Sonar"/>
                </LinearLayout>
                <!-- Scope Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/scopeButton"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="2dp"
                        android:scaleType="fitCenter"
                        android:background="#00B7c3"
                        android:src="@drawable/scope_blue"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:text="Scope"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
            android:id="@+id/gameButtonsBottomRowLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Sonar Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/fireButton"
                    android:layout_width="match_parent"
                    android:layout_margin="2dp"
                    android:layout_height="60dp"
                    android:scaleType="fitCenter"
                    android:background="#00B7c3"
                    android:src="@drawable/target_blue"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="Fire"/>
            </LinearLayout>
            <!-- Scope Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/moveButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="2dp"
                    android:scaleType="fitCenter"
                    android:background="#00B7c3"
                    android:src="@drawable/missile_blue"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="Move"/>
            </LinearLayout>
        </LinearLayout>
               <!--
                <Button
                    android:id="@+id/scopeButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Scope"
                    />
                <Button
                    android:id="@+id/fireButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fire"
                    />
                <Button
                    android:id="@+id/moveBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Move"
                    />
                    -->
            </LinearLayout>

            <!-- Hidden Confirm Buttons -->
            <LinearLayout
                android:id="@+id/gameButtonsLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/confirmButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:backgroundTint="@color/water_blue"
                    android:textColor="@color/black"
                    android:text="Confirm"
                    />
                <Button
                    android:id="@+id/backButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:backgroundTint="@color/water_blue"
                    android:textColor="@color/black"
                    android:text="Back"
                    />
                <Button
                    android:id="@+id/rotateButton"
                    android:layout_width="0dp"
                    android:textSize="20dp"
                    android:backgroundTint="@color/water_blue"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:text="Rotate"
                    />

            </LinearLayout>

            <!-- Move Button -->
            <!--
            <LinearLayout
                android:id="@+id/moveButtonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/moveBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Move"
                    />
            </LinearLayout>
-->
            <!-- Player Health Text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="25dp"
                        android:text="Player Health:"
                        android:layout_height="35dp"/>
                    <TextView
                        android:id="@+id/playerHealthText"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:textSize="25dp"
                        android:text="n/a"
                        android:layout_height="35dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="25dp"
                        android:text="Opponent Health:"
                        android:layout_height="35dp"/>
                    <TextView
                        android:id="@+id/oppHealthText"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:textSize="25dp"
                        android:text="n/a"
                        android:layout_height="35dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/toggleSubButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Toggle Sub"
                        android:textSize="20dp"
                        android:backgroundTint="@color/water_blue"
                        android:textColor="@color/black"
                        android:layout_weight="1"/>
                    <Button
                        android:id="@+id/clearMapButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/water_blue"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:text="Clear Map"
                        android:layout_weight="1"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/debugText"
                    android:layout_width="match_parent"
                    android:text="debug"
                    android:layout_height="25dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>